{
    "name": "linlak/momoapi",
    "description": "Momo php library is small php package that helps developers to integrate the momo api their project (s).",
    "keywords": [
        "mtn momo",
         "momo api", 
         "momo library",
         "mtn momo pay api",
         "library",
         "integration",
         "api",
         "linlak",
         "linus",
         "linworld",
          "mtn open api", "momo pay uganda", 
          "mobile money api"
      ],
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Linus Nowomukama",
            "email": "nowomukama.linlak.linus2@gmail.com"
        }
    ],
    "type": "library",
    "require": {
		    "php": ">=5.4",
        "guzzlehttp/guzzle": "^6.3",
        "ramsey/uuid": "^3.7",
        "str/str":"^1.1.1"
    },
	"require-dev": {
		"phpunit/phpunit": "5.2.*"
    },
  "config":{
    "preferred-install": "dist"
  },
	"autoload": {
        "psr-4": {
            "Momo\\MomoApp\\": "src/"
        }
    },
    "prefer-stable": true,
    "suggest": {
        "guzzlehttp/guzzle": "Required to perform http requests",
        "ramsey/uuid": "Required to perform string manulaption such as genarating RFC 4122 version 1,3,4 and 5 univasary unique identifiers (UUID)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
